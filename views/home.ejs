<script>

    let options = { weekday: 'long',timeZone: 'Asia/Baku'};
    const day = new Date().toLocaleString("en-US",options)

    if(day==="Monday" || day==="Thursday") {
        document.getElementById("farm-monday-thursday").style.display = "block"
        document.getElementById("feature-farm").style.display = "flex"
    } else if (day === "Sunday") {
        document.getElementById("farm-sunday").style.display = "block"
        document.getElementById("feature-farm").style.display = "flex"
    }
    else if (day === "Tuesday" || "Friday") {
        document.getElementById("farm-tuesday-friday").style.display = "block"
        document.getElementById("feature-farm").style.display = "flex"
    } else {
        document.getElementById("farm-wednesday-saturday").style.display = "block"
        document.getElementById("feature-farm").style.display = "flex"
    }
</script>


